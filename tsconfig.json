{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "rootDir": "./src",
    "moduleResolution": "Node",
    "baseUrl": "./",
    "sourceMap": false,
    "outDir": "./dist",
    "noImplicitAny": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "newLine": "lf"
  },
  "ts-node": {
    "compilerOptions": {
      "esModuleInterop": true,
      "module": "CommonJS"
    }
  },
  "include": ["./src"],
  "exclude": ["./dist", "./node_modules", "./__tests__", "./coverage","./dist/types"]
}
